{
  "types": {
    "Room": {
      "properties": {
        "name": {"type": "string"},
        "occupancy": {"type": "int"},
        "hub_id": {"type": "string"},
        "mid_id": {"type": "string"}
      }
    },
    "Light": {
      "properties": {
        "brightness": {"type": "int", "range": [0, 100]},
        "on": {"type": "bool"},
        "color": {"type": "color"},
        "mode": {"type": "string", "values": ["normal", "presentation", "video"]}
      }
    },
    "User": {
      "properties": {
        "uid": {"type": "string"},
        "hub_id": {"type": "string"},
        "email": {"type": "string"},
        "space": {"type": "string"}
      }
    },
    "PIR": {
      "properties": {
        "motion_detected": {"type": "bool"}
      }
    },
    "Display": {
      "properties": {
        "on": {"type": "bool"},
        "content_url": {"type": "string"},
        "mode": {"type": "string", "values": ["welcome", "presentation", "meeting_info", "emergency"]}
      }
    },
    "Door": {
      "properties": {
        "locked": {"type": "bool"},
        "open": {"type": "bool"}
      }
    },
    "TranscriptionUnit": {
      "properties": {
        "active": {"type": "bool"},
        "recording": {"type": "bool"},
        "meeting_id": {"type": "string"}
      }
    },
    "HVAC": {
      "properties": {
        "temperature": {"type": "int", "range": [15, 30]},
        "mode": {"type": "string", "values": ["off", "heating", "cooling", "auto"]},
        "fan_speed": {"type": "int", "range": [0, 3]}
      }
    },
    "SecurityCamera": {
      "properties": {
        "recording": {"type": "bool"},
        "motion_alert": {"type": "bool"}
      }
    },
    "SmartBoard": {
      "properties": {
        "on": {"type": "bool"},
        "content_url": {"type": "string"}
      }
    },
    "AudioSystem": {
      "properties": {
        "on": {"type": "bool"},
        "volume": {"type": "int", "range": [0, 100]},
        "mode": {"type": "string", "values": ["conference", "presentation", "background"]}
      }
    }
  }
}