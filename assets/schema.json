{
  "types": {
    "Room": {
      "properties": {
        "name": {"type": "string"},
        "occupancy": {"type": "int"},
        "hub_id": {"type": "string"},
        "mid_id": {"type": "string"}
      }
    },
    "Light": {
      "properties": {
        "brightness": {"type": "int", "range": [0, 100]},
        "on": {"type": "bool"},
        "color": {"type": "color"},
        "mode": {"type": "string", "values": ["normal", "presentation", "video"]}
      }
    },
    "User": {
      "properties": {
        "uid": {"type": "string"},
        "hub_id": {"type": "string"},
        "email": {"type": "string"},
        "space": {"type": "string"}
      }
    },
    "PIR": {
      "properties": {
        "motion_detected": {"type": "bool"}
      }
    },
    "Display": {
      "properties": {
        "on": {"type": "bool"},
        "content_url": {"type": "string"},
        "mode": {"type": "string", "values": ["welcome", "presentation", "meeting_info", "emergency"]}
      }
    },
    "TranscriptionUnit": {
      "properties": {
        "active": {"type": "bool"},
        "recording": {"type": "bool"},
        "meeting_id": {"type": "string"}
      }
    },
    "AudioSystem": {
      "properties": {
        "on": {"type": "bool"},
        "volume": {"type": "int", "range": [0, 100]},
        "mode": {"type": "string", "values": ["conference", "presentation", "background"]}
      }
    }
  }
}